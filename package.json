{
	"name": "romly-command-palette-de-outline",
	"displayName": "Romly Command Palette de Outline",
	"publisher": "Romly",
	"description": "Show document outline in the command palette.",
	"version": "1.3.3",
	"license": "See LICENSE.txt",
	"engines": {
		"vscode": "^1.107.0"
	},
	"categories": [
		"Other"
	],
	"icon": "images/icon.png",
	"galleryBanner": {
		"color": "#00a0d9",
		"theme": "dark"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Romly-Romly/romly-command-palette-de-outline"
	},
	"bugs": {
		"url": "https://github.com/Romly-Romly/romly-command-palette-de-outline"
	},

	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "romly-command-palette-de-outline.showOutline",
				"title": "%commandTitle.showOutline%",
				"category": "Romly"
			}
		],
		"configuration": {
			"title": "Romly Command Palette de Outline",
			"properties": {
				"Romly-CommandPalette-de-Outline.showLineNumber": {
					"type": "boolean",
					"default": true,
					"description": "%description.showLineNumber%"
				},
				"Romly-CommandPalette-de-Outline.indentString": {
					"type": "string",
					"default": "        ",
					"description": "%description.indentString%"
				},
				"Romly-CommandPalette-de-Outline.markdown.stripHeaderMarkers": {
					"type": "boolean",
					"default": true,
					"description": "%description.markdown.stripHeaderMarkers%"
				},
				"Romly-CommandPalette-de-Outline.c.combineUnnamedStructAndTypedef": {
					"type": "boolean",
					"default": true,
					"description": "%description.c.combineUnnamedStructAndTypedef%"
				},
				"Romly-CommandPalette-de-Outline.enableSymbolFilters": {
					"type": "boolean",
					"default": true,
					"description": "%description.enableSymbolFilters%"
				},
				"Romly-CommandPalette-de-Outline.symbolFilters": {
					"type": "array",
					"default": [],
					"markdownDescription": "%description.symbolFilters%",
					"items": {
						"type": "object",
						"properties": {
							"documentPattern": {
								"type": "string",
								"description": "%description.symbolFilters.documentPattern%"
							},
							"filters": {
								"type": "array",
								"description": "%description.symbolFilters.filters%",
								"items": { "type": "string" }
							}
						}
					}
				},
				"Romly-CommandPalette-de-Outline.debugMode": {
					"type": "boolean",
					"default": false,
					"markdownDescription": "%description.debugMode%"
				},
				"Romly-CommandPalette-de-Outline.symbolKindNameDisplay": {
					"type": "string",
					"default": "hide",
					"enum": ["hide", "short", "raw"],
					"enumDescriptions": ["%description.symbolKindNameDisplay.hide%", "%description.symbolKindNameDisplay.short%", "%description.symbolKindNameDisplay.raw%"],
					"description": "%description.symbolKindNameDisplay%"
				},
				"Romly-CommandPalette-de-Outline.enableSymbolCaptionFormat": {
					"type": "boolean",
					"default": true,
					"description": "%description.enableSymbolCaptionFormat%"
				},
				"Romly-CommandPalette-de-Outline.symbolCaptionFormatters": {
					"type": "array",
					"default": [
						{
							"languageIds": ["c"],
							"formatters": [
								{
									"symbolKinds": "Function",
									"regexp": "^(?<functionName>[a-zA-Z_]\\w*)\\s*\\(",
									"replacement": "${functionName}"
								}
							]
						},
						{
							"languageIds": ["cpp"],
							"formatters": [
								{
									"symbolKinds": ["Function", "Method"],
									"regexp": "(?<functionName>\\w+)\\s*\\([^)]*\\)(?:\\s*(?<qualifier>const|noexcept|override|final|volatile))*",
									"replacement": "${functionName} ${qualifier}"
								}
							]
						}
					],
					"markdownDescription": "%description.symbolCaptionFormatter%",
					"items": {
						"type": "object",
						"properties": {
							"languageIds": {
								"type": ["string", "array"],
								"items": { "type": "string" },
								"description": "%description.symbolCaptionFormatter.documentPatterns%"
							},
							"formatters": {
								"type": "array",
								"description": "%description.symbolCaptionFormatter.formatters%",
								"items": {
									"symbolKinds": {
										"type": ["string", "array"],
										"items": { "type": "string" },
										"description": "%description.symbolCaptionFormatter.formatter.symbolKinds%"
									},
									"regexp": {
										"type": "string",
										"description": "%description.symbolCaptionFormatter.formatter.regexp%"
									},
									"replacement": {
										"type": "string",
										"description": "%description.symbolCaptionFormatter.formatter.replacement%"
									}
								}
							}
						}
					}
				},
				"Romly-CommandPalette-de-Outline.fetchSymbolHoverText": {
					"type": "string",
					"enum": ["none", "description", "detail"],
					"enumDescriptions": ["%description.fetchSymbolHoverText.none%", "%description.fetchSymbolHoverText.description%", "%description.fetchSymbolHoverText.detail%"],
					"default": "detail",
					"description": "%description.fetchSymbolHoverText%"
				},
				"Romly-CommandPalette-de-Outline.fetchHoverTextLanguageIdBlackList": {
					"type": "array",
					"default": ["json", "jsonc"],
					"markdownDescription": "%description.fetchHoverTextLanguageIdBlackList%",
					"items": { "type": "string" }
				},
				"Romly-CommandPalette-de-Outline.hoverTextIndentSpaces": {
					"type": "integer",
					"minimum": 0,
					"maximum": 100,
					"default": 16,
					"description": "%description.hoverTextIndentSpaces%"
				},
				"Romly-CommandPalette-de-Outline.maxOutlineIndent": {
					"type": "integer",
					"minimum": 0,
					"maximum": 12,
					"default": 4,
					"description": "%description.maxOutlineIndent%"
				}
			}
		}
	},
	"l10n": "./l10n",
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/minimatch": "^6.0.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "20.x",
		"@types/vscode": "^1.107.0",
		"@typescript-eslint/eslint-plugin": "^7.11.0",
		"@typescript-eslint/parser": "^7.11.0",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.4.0",
		"esbuild": "^0.21.5",
		"eslint": "^8.57.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.4.5"
	},
	"dependencies": {
		"@vscode/l10n": "^0.0.18",
		"minimatch": "^10.1.1"
	}
}
